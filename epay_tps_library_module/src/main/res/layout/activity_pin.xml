<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PinActivity">

    <TextView
        android:id="@+id/custNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/customer_name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cardTypeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_type_dummy"
        android:textAlignment="center"
        android:textColor="@android:color/tab_indicator_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/accTypeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_type"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/amountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="@string/input_amount"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/midnightBlue"
        android:padding="10dp"
        android:text="@string/pin_confirm_msg"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/pinInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="36sp" />

    <!--<androidx.recyclerview.widget.RecyclerView-->
        <!--android:id="@+id/mRecycler"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:padding="20dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:text="1"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/four"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:background="#FFF"
            />

        <Button
            android:id="@+id/five"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:background="#FFF"
            />

        <Button
            android:id="@+id/six"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:background="#FFF"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/seven"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:background="#FFF"
            />

        <Button
            android:id="@+id/eight"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:background="#FFF"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:background="#FFF"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelPinBtn"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="#F00"
            android:padding="10dp"
            android:text="Cancel"
            android:textColor="#FFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/zero"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:background="#FFF"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/clearPinBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:text="clear" />



        </LinearLayout>

        <Button
            android:id="@+id/confirmPinBtn"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="#FFF"
            android:padding="10dp"
            android:text="Enter" />

    </LinearLayout>



</LinearLayout>