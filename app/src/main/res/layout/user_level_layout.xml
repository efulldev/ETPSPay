<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_level_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/ic_supervisor_account_deep_blue_64dp" />

    <TextView
        android:id="@+id/user_level_name"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignTop="@+id/user_level_logo"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/user_level_logo"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/user_mgt"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</RelativeLayout>